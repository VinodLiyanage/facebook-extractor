{
    "name": "Facebook Extractor",
    "version": "1.0.0",
    "description": "This is a great tool for extracting user email and number from their facebook account.",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "action": {
        "default_icon": {                    
            "16": "/assets/images/logo.png",           
            "24": "/assets/images/logo.png",           
            "32": "/assets/images/logo.png",
            "48": "/assets/images/logo.png"           
          },
          "default_title": "Facebook Data Extractor",      
          "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.facebook.com/*"],
        "css":["/assets/css/bootstrap.min.css"],
        "run_at": "document_idle",
        "js": [
          "/assets/js/contentScripts/pageObserverLocal.js"
        ]
      }
    ],
    
      "permissions": [
        "storage"
      ],
      "host_permissions": [],
      "icons": {                    
        "16": "/assets/images/logo.png",           
        "24": "/assets/images/logo.png",           
        "32": "/assets/images/logo.png",
        "48": "/assets/images/logo.png"           
      },
      
      "web_accessible_resources": [
        {
          "resources": ["/assets/images/logo.png", "popup.html"],
          "matches": ["<all_urls>"]
        }]
    }